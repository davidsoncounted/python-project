import random
print("choice: Rock = 1, paper = 2 scissor = 3")
decision = input ("whats your choice? ")
decision = int(decision)
computer_choice = random.randint(1,3)
print(f" computer choice: {computer_choice}")
if decision == computer_choice :
    print("Draw")
elif decision == 1 :
    if computer_choice == 2:
        print("computer wins")
    else:
        print("you win")
elif decision == 2 :
    if computer_choice == 1:
        print("you win")
    else:
        print("computer wins")
elif decision == 3 :
    if computer_choice == 1:
        print("computer wins")
    else:
        print("you win")
